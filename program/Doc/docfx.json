{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "Program/Program.csproj",
            "Presentation/Presentation.csproj",
            "Infrastructure/Infrastructure.csproj",
            "Domain/Domain.csproj",
            "Application/Application.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Todo",
      "_appTitle": "Todo",
      "_enableSearch": true,
      "pdf": true
    }
  }
}